{
	"name": "xy2z/capro-dev",
	"description": "Capro development branch",
	"license": "MIT",
	"homepage": "https://capro.xy2z.io",
	"authors": [
		{
			"name": "Alexander <xy2z> Pedersen",
			"email": "xy2z@pm.me",
			"homepage": "https://xy2z.io",
			"role": "Developer"
		}
	],
	"require": {
		"php": "^8.1",
		"jenssegers/blade": "2.0.*",
		"xy2z/lite-config": "1.*",
		"symfony/yaml": "7.*",
		"spatie/yaml-front-matter": "2.*",
		"league/commonmark": "2.*",
		"statix/server": "^0.5.0",
		"vlucas/phpdotenv": "5.*",
		"symfony/var-dumper": "7.*"
	},
	"require-dev": {
		"friendsofphp/php-cs-fixer": "^3",
		"phpstan/phpstan": "1.*",
		"phpunit/phpunit": "11.*"
	},
	"autoload": {
		"psr-4": {
			"xy2z\\Capro\\": "src/",
			"xy2z\\Capro\\Commands\\": "src/Commands"
		}
	},
	"bin": [
		"capro"
	],
	"funding": [
		{
			"type": "github",
			"url": "https://github.com/sponsors/xy2z"
		}
	],
	"scripts": {
		"build": "sh build.sh",
		"b": "sh build.sh",
		"extract": "box extract build/capro.phar build/extract",
		"cs": "php-cs-fixer fix",
		"test": "phpunit tests --testdox",
		"stan": "phpstan analyse"
	},
	"scripts-descriptions": {
		"build": "Builds the capro.phar file using build.sh",
		"b": "Alias for `composer build`",
		"extract": "Extract the build/capro.phar file for debugging"
	}
}
