{
    "name": "xy2z/capro",
    "description": "Static site generator",
    "type": "library",
	"license": "MIT",
	"homepage": "https://capro.xy2z.io",
    "authors": [
        {
            "name": "Alexander <xy2z> Pedersen",
            "email": "xy2z@pm.me",
			"homepage": "https://xy2z.io",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "8.*",
        "jenssegers/blade": "1.4.*",
        "xy2z/lite-config": "1.*",
        "symfony/yaml": "5.*",
        "spatie/yaml-front-matter": "2.*",
        "league/commonmark": "2.*",
        "statix/server": "^0.4.1",
        "vlucas/phpdotenv": "5.*",
        "symfony/var-dumper": "6.*"
    },
	"require-dev": {
        "friendsofphp/php-cs-fixer": "3.15.*",
        "phpstan/phpstan": "1.*",
        "phpunit/phpunit": "9.*"
    },
    "autoload": {
        "psr-4": {
            "xy2z\\Capro\\": "src/",
            "xy2z\\Capro\\Commands\\": "src/Commands"
        }
    },
    "bin": [
        "capro"
    ],
	"funding": [
		{
			"type": "github",
			"url": "https://github.com/sponsors/xy2z"
		}
	],
	"scripts": {
		"build": "sh build.sh",
		"b": "sh build.sh",
		"extract": "box extract build/capro.phar build/extract"
	},
	"scripts-descriptions": {
		"build": "Builds the capro.phar file using build.sh",
		"b": "Alias for `composer build`",
		"extract": "Extract the build/capro.phar file for debugging"
	}
}
